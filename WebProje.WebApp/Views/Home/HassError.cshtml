@{
           
                ViewBag.Title = "Hata Oluştu";
}
<div class="container text-center">

    <div class="row">
        <div class="col-md-1"></div>

        <div class="col-md-10">
            <br /><br />

            @{
                Exception ex = null;

                if (TempData["LastError"] != null)
                {
                    ex = TempData["LastError"] as Exception;
                }
            }

            <h1><span class="fas fa-remove"></span> Hata Oluştu</h1>
            <br /><br />
            <p>
                <h4><b>Hata oluştu, lütfen site yöneticisi ile iletişime geçiniz.</b></h4>
                <br /><br /><br />
                @if (ex != null)
                {
                    <strong>Hata Detay : </strong>
                    @ex.Message
                    <br /><br /><br />
                }
                <a href="/Home/Index" class="btn btn-button btn-primary"><span class="fas fa-home"></span>Ana Sayfaya Git!</a>

            </p>

        </div>
    </div>
</div>
