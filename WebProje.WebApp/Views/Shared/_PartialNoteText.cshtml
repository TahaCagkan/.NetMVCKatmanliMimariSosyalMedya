@using WebProje.Entities
@model Note

<div class="row">
    <div class="col-md-12 text-center">
        <h3>
            @Model.Title
        </h3>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12 text-right">
        <span class="fas fa-user"></span>@Model.Owner.Username<br />
        <span class="fas fa-clock"></span>@Model.ModifiedOn
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p class="text-justify">
            @Model.Text
        </p>
    </div>
</div>
